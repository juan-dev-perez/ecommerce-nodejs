<div class="col-sm-12 col-lg-3 align-items-center justify-content-center" style="margin-top:2%">
    <div class="bg-light border border-secondary rounded shadow p-3 mb-5"> 
        <form action="/productos" method="POST" enctype="multipart/form-data">
            <h2 class="text-center">Ingresar producto</h2>
            <br>
            <div class="form-group">
                <b>Descripci√≥n:</b>
                <br>
                <input type="hidden" name="idProduct" id="idProduct" value="1" required>
                <input type="text" class="form-control" name="descripcion" id="descripcion" required>
            </div>
            <div class="form-group">
                <b>Precio:</b>
                <br>
                <input type="number" step="0.01" class="form-control" name="precio" id="precio" required>
            </div>
            <div class="form-group">
                <b>Categoria:</b>
                <br>
                <select id="categoria" name="categoria" class="form-control" required>
                    <option value="Mouses">Mouses</option>
                    <option value="Teclados">Teclados</option>
                    <option value="Auriculares">Auriculares</option>
                </select>
            </div>
            <div class="form-group">
                <b>Foto:</b>
                <br>
                <input type="file" name="foto" class="form-control" id="foto" required>
            </div>
            <br>
            <input type="submit" id="guardar" class="btn btn-outline-success" value="Guardar" style="margin-right: 10px;"></input>    
            <input type="reset" value="Limpiar" class="btn btn-outline-danger" style="margin-right: 10px;"></input>   
            <a href="/" class="btn btn-outline-primary">Volver a la tienda</a> 
        </form>
    </div>
</div>